{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "pattern": "^[A-Za-z0-9-_ ]+$"
    },
    "name": {
      "type": "string",
      "maxLength": 2048
    },
    "category": {
      "type": "string",
      "enum": ["My Studies", "Organization"]
    },
    "description": {
      "type": "string",
      "maxLength": 8192
    },
    "projectId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "pattern": "^[A-Za-z0-9-_]+$"
    },
    "folder": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1000
    },
    "kmsArn": {
      "type": "string",
      "maxLength": 90
    },
    "kmsScope": {
      "enum": ["bucket", "study", "none"]
    },
    "adminUsers": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "accessType": {
      "type": "string",
      "enum": ["readonly", "readwrite"]
    }
  },
  "required": ["id", "category", "folder", "accessType", "adminUsers"]
}
