{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "uid": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9.!#$%&’*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\\.[a-zA-Z0-9-]+)*$"
    },
    "usernameInIdp": {
      "type": "string",
      "minLength": 3,
      "maxLength": 300,
      "pattern": "^[A-Za-z0-9-_.]+$|^[a-zA-Z0-9.!#$%&’*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\\.[a-zA-Z0-9-]+)*$"
    },
    "firstName": {
      "type": "string",
      "maxLength": 500
    },
    "lastName": {
      "type": "string",
      "maxLength": 500
    },
    "userType": {
      "type": "string",
      "enum": ["root"]
    },
    "isSamlAuthenticatedUser": {
      "type": "boolean"
    },
    "isAdmin": {
      "type": "boolean"
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive", "pending"]
    },
    "rev": {
      "type": "number"
    },
    "userRole": {
      "type": "string"
    },
    "projectId": {
      "type": "array"
    },
    "isExternalUser": {
      "type": "boolean"
    },
    "encryptedCreds": {
      "type": "string"
    },
    "applyReason": {
      "type": "string"
    }
  },
  "required": ["uid", "rev"]
}
