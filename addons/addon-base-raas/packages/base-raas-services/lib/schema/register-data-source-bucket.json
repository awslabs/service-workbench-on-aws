{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "accountId": {
      "type": "string",
      "pattern": "^[0-9]{12}$"
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 255,
      "pattern": "^([^<>{}]*)$"
    },
    "region": {
      "type": "string",
      "enum": [
        "us-west-1",
        "us-west-2",
        "us-east-1",
        "us-east-2",
        "af-south-1",
        "ap-east-1",
        "ap-south-1",
        "ap-northeast-1",
        "ap-northeast-2",
        "ap-northeast-3",
        "ap-southeast-1",
        "ap-southeast-2",
        "ca-central-1",
        "cn-north-1",
        "cn-northwest-1",
        "eu-central-1",
        "eu-north-1",
        "eu-south-1",
        "eu-west-1",
        "eu-west-2",
        "eu-west-3",
        "me-south-1",
        "sa-east-1",
        "us-gov-east-1",
        "us-gov-west-1"
      ]
    },
    "awsPartition": {
      "type": "string",
      "enum": ["aws", "aws-cn", "aws-us-gov"]
    },
    "kmsArn": {
      "type": "string",
      "maxLength": 90,
      "pattern": "arn:aws[a-zA-Z-]*:kms:[a-z]{2}((-gov)|(-iso(b?)))?-[a-z]+-[0-9]{1}:[0-9]{12}:key[/]{1}[a-zA-Z0-9-]+"
    },
    "access": {
      "type": "string",
      "enum": ["roles", "accessPoint", "bucketPolicy"]
    },
    "sse": {
      "type": "string",
      "enum": ["kms", "s3", "none"]
    }
  },
  "required": ["accountId", "name", "region", "awsPartition", "access", "sse"]
}
