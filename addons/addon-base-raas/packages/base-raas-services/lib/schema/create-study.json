{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "pattern": "^[A-Za-z0-9-_ ]+$"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 300,
      "pattern": "^([^<>{}]*)$"
    },
    "category": {
      "type": "string",
      "enum": ["My Studies", "Organization", "Open Data"]
    },
    "description": {
      "type": "string",
      "maxLength": 2048,
      "pattern": "^([^<>{}]*)$"
    },
    "projectId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "pattern": "^[A-Za-z0-9-_]+$"
    },
    "uploadLocationEnabled": {
      "type": "boolean"
    },
    "sha": {
      "type": "string",
      "maxLength": 64,
      "pattern": "^([A-Fa-f0-9])$"
    },
    "resources": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "arn": {
              "type": "string",
              "maxLength": 2048,
              "pattern": "^(arn:aws[a-zA-Z-]*:[a-zA-Z0-9-/.:_?*]+)$"
            }
          }
        }
      ]
    },
    "accessType": {
      "type": "string",
      "enum": ["readonly", "readwrite"]
    }
  },
  "required": ["id", "category"]
}
